<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- API Quotation Mail Template -->

    <record id="email_template_due_invoice" model="mail.template">
        <field name="name">Invoice Due Date Followup Email Cron</field>
        <field name="email_from">sslsuppo@gmail.com</field>
        <field name="subject">Due Invoice Followup Report In Odoo</field>
        <field name="email_to">aarthi@sslconsultingservice.com</field>
        <!-- <field name="email_cc">satish@sslconsultingservice.com</field> -->
        <field name="model_id" ref="saam_extension.model_account_move"/>
        <field name="auto_delete" eval="False"/>
        <field name="body_html" type="html">
            <table border="0" cellpadding="0" cellspacing="0" style="padding-top: 16px; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;">
                <div>
                    <p>Hi Team,
                    </p>
                    <t t-set="lines" t-value="ctx.get('lines', [])"/>
                    <table>
                        <thead>
                            <tr style="background-color:rgb(233,232,233);">
                                <!-- <th style="font-size: 13px;"><strong>Invoice Date</strong></th> -->
                                <th style="font-size: 13px;"><strong>Invoice Ref</strong></th>
                                <th style="font-size: 13px;"><strong>Customer</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="lines" t-as="line">
                                <!-- <td style="font-size: 13px;" valign="top" t-out="line['invoice_date'] or ''">/</td> -->
                                <td style="font-size: 13px;" valign="top" t-out="line['name'] or ''">/</td>
                                <td style="font-size: 13px;" valign="top" t-out="line['customer_name']">/</td>
                            </tr>
                        </tbody>
                    </table>
                    <p>
                        The above Invoices are in due on today, Kindly check the same in Odoo, Thanks.
                    </p>
                </div>  
            </table>
        </field>
    </record>
</odoo>

