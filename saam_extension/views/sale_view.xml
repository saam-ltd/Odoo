<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Sale View Inherit -->
    <record id="view_sale_form_inherit" model="ir.ui.view">
        <field name="name">sale.form.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="payment_term_id" position="after">
                <field name="p_o_ref" attrs="{'readonly': [('state', 'in',('sale','done','cancel'))]}"/>
            </field>
        </field>
    </record>

    <!-- Sale order - Search view inherit -->
    <record id="view_sales_order_filter_inheirt" model="ir.ui.view">
        <field name="name">sale.order.search.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" type="inside">
                <field name="p_o_ref"/>
                <!-- Group By -->
                <filter name="group_by_p_o_ref" string="Custom PO Reference" context="{'group_by': 'p_o_ref'}"/>
            </xpath>
        </field>
    </record>

</odoo>