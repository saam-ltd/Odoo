<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
        <record id="view_sale_form_inherit" model="ir.ui.view">
            <field name="name">sale.form.view.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="payment_term_id" position="after">
                    <field name="p_o_ref" readonly="state in ('sale','done','cancel')"/>
                    <!-- <field name="logistic_duration_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="1"/> -->
                    <field name="customer_category_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="1"/>
                    <field name="customer_remarks" readonly="1"/>
                </field>
                <field name="user_id" position="after">
                    <field name="custom_salesperson_id" options="{'no_create': True, 'no_edit': True, 'no_open': True}" readonly="state in ('sale','done','cancel')"/>
                    <field name="is_accessed_sp" invisible="1"/>
                    <field name="is_non_accessed_sp" invisible="1"/>
            </field>
            <xpath expr="//notebook/page[1]/field/list/field[@name='name']" position="after">
                <field name="prod_boxes" readonly="state in ('sale','done','cancel')" string="Orders"/>
            </xpath>
            <xpath expr="//notebook/page[1]/field/form/group/group/field[@name='product_type']" position="before">
                <field name="prod_boxes" string="Orders"/>
            </xpath>
            <xpath expr="//notebook/page[1]/field/list/field[@name='product_uom_qty']" position="attributes">
                <attribute name="attributes">{'readonly': [('parent.is_accessed_sp','=',True),('parent.is_non_accessed_sp','=',False)]}</attribute>
            </xpath>
        </field>
    </record>

    <!-- Sale Tree View Inherit -->
    <record id="view_order_tree_inherit" model="ir.ui.view">
        <field name="name">sale.order.tree.view.inherit.salesperson</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="replace">
                <field name="user_id" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="custom_salesperson_id"/>
            </xpath>
        </field>
    </record>

    <!-- Quotation Tree View Inherit -->
    <record id="view_quotation_tree_with_onboarding_inherit" model="ir.ui.view">
        <field name="name">sale.order.tree.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="replace">
                <field name="user_id" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="custom_salesperson_id"/>
            </xpath>
        </field>
    </record>

    <!-- Sale order - Search view inherit -->
    <record id="view_sales_order_filter_inheirt" model="ir.ui.view">
        <field name="name">sale.order.search.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" type="inside">
                <field name="p_o_ref"/>
                <!-- Group By -->
                <filter name="group_by_p_o_ref" string="Custom PO Reference" context="{'group_by': 'p_o_ref'}"/>
            </xpath>
        </field>
    </record>

