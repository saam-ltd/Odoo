<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="paperformat_samm_purchase_report" model="report.paperformat">
            <field name="name">Purchase Order/ RFQ</field>
            <field name="default" eval="True" />
            <field name="format">custom</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">55</field>
            <field name="margin_bottom">32</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">50</field>
            <field name="dpi">90</field>
        </record>

        <record id="action_report_purchase_order_samm" model="ir.actions.report">
            <field name="name">SSL Purchase Order</field>
            <field name="model">purchase.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">samm_reports.report_purchaseorder_inherit</field>
            <field name="report_file">samm_reports.report_purchaseorder_inherit</field>
            <field name="print_report_name">
                (object.state in ('draft', 'sent') and 'Request for Quotation - %s' % (object.name) or
                'Purchase Order - %s' % (object.name))</field>
            <field name="binding_model_id" ref="purchase.model_purchase_order"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="samm_reports.paperformat_samm_purchase_report" />
        </record>

        <record id="report_purchase_quotation_samm" model="ir.actions.report">
            <field name="name">SSL Request for Quotation</field>
            <field name="model">purchase.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">samm_reports.report_purchaseorder_inherit</field>
            <field name="report_file">samm_reports.report_purchaseorder_inherit</field>
            <field name="print_report_name">'Request for Quotation - %s' % (object.name)</field>
            <field name="binding_model_id" ref="purchase.model_purchase_order"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="samm_reports.paperformat_samm_purchase_report" />
        </record>
    </data>
</odoo>
