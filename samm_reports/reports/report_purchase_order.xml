<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_purchaseorder_document_inherit">
    <!-- <t t-call="web.external_layout"> -->
    <t t-call="web.html_container">
        <t t-call="samm_reports.purchase_external_layout_common_header">
        <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
        <t t-set="address">
            <div t-field="o.partner_id"
            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
            <p t-if="o.partner_id.vat"><t t-esc="o.company_id.account_fiscal_country_id.vat_label or 'Tax ID'"/>: <span t-field="o.partner_id.vat"/></p>
        </t>
        <t t-if="o.dest_address_id">
            <t t-set="information_block">
                <strong>SHIPPING ADDRESS:</strong>
                <div t-if="o.dest_address_id">
                    <div t-field="o.dest_address_id"
                        t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}' name="purchase_shipping_address"/>
                </div>

            </t>
        </t>
            <div class="page">
                <div class="oe_structure"/>

                <h2 t-if="o.state in ['draft', 'sent', 'to approve']">REQUEST FOR QUOTATION</h2>
                <h2 t-if="o.state in ['purchase', 'done']">PURCHASE ORDER</h2>
                <h2 t-if="o.state == 'cancel'">CANCELLED PURCHASE ORDER</h2>

                <div class="row">
                    <div class="col-6">
                        <strong>ADDRESS: </strong>
                        <span t-field="o.partner_id"
                            t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                        <t t-if="o.partner_id.phone"><b>TEL:</b>
                                <span t-field="o.partner_id.phone"/></t><br/>
                    </div>
                    <div class="col-6">
                        <strong>ORDER DATE:</strong>
                        <span t-field="o.date_order"  t-options='{"widget": "date"}'/><br/>
                        <strong>ORDER REFERENCE: </strong><span t-field="o.name"/>
                    </div>
                </div>
                <div class="row mt32 mb32" id="informations">
                    <div t-if="o.user_id" class="col-auto col-3 mw-100 mb-2">
                        <strong>REPRESENTATIVE: </strong><span t-field="o.user_id"/>
                    </div>
                    <div t-if="o.partner_ref" class="col-auto col-3 mw-100 mb-2">
                        <strong>YOUR ORDER REFERENCE: </strong><span t-field="o.partner_ref"/>
                    </div>
                    <div t-if="o.payment_term_id" class="col-auto col-3 mw-100 mb-2">
                        <strong>PAYMENT TERMS: </strong><span t-field="o.payment_term_id.name"/>
                    </div>
                </div>
                <br/>
                <br/>
                <table class="table table-sm o_main_table">
                    <thead>
                        <tr>
                            <th name="th_sku" class="text-left">SKU</th>
                            <th name="th_description"><strong>DESCRIPTION</strong></th>
                            <th name="th_taxes"><strong>TAXES</strong></th>
                            <th name="th_date_req" class="text-center"><strong>DATE REQ.</strong></th>
                            <th name="th_quantity" class="text-right"><strong>QTY</strong></th>
                            <th name="th_price_unit" class="text-right"><strong>RATE</strong></th>
                            <th name="th_amount" class="text-right"><strong>AMOUNT</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-foreach="o.order_line" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">
                                    <td t-if="line.product_id.default_code" name="td_default_code">
                                        <span t-field="line.product_id.default_code"/>
                                    </td>
                                    <td id="product">
                                        <!-- <span t-field="line.name"/> -->
                                        <span t-field="line.product_id.name"/>
                                    </td>
                                    <td name="td_taxes">
                                        <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="line.date_planned" t-options='{"widget": "date"}'/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.product_qty" t-options='{"widget": "float", "precision": 0}'/>
                                        <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.price_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99" id="section">
                                        <span t-field="line.name"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99" id="note">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>
                            
                            <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-right">
                                    <td colspan="99" id="subtotal">
                                        <strong class="mr16">Subtotal</strong>
                                        <span
                                            t-esc="current_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <div id="total" class="row justify-content-end">
                    <div class="col-4">
                        <table class="table table-sm">
                            <t t-set="tax_totals" t-value="json.loads(o.tax_totals_json)"/>
                            <t t-call="account.document_tax_totals"/>
                        </table>
                    </div>
                </div>

                <strong>Remarks / Notes:</strong>
                <span t-field="o.notes" />
                <!-- <p t-field="o.notes"/> -->
                <div class="oe_structure"/>
            </div>
        </t>
    </t>
</template>

<template id="purchase_external_layout_common_header">
    <div class="header" style= "font-size:14px">
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <div class="row">
            <div class="col-4" style="font-size:14px;" align="text-right">
            <b><span  t-esc="o.company_id.name"/></b><br/>
            <t t-if="o.company_id.street"><br/>
                <b><span t-esc="o.company_id.street"/>,</b> 
            </t>
            <t t-if="o.company_id.street2">
                <b><span t-esc="o.company_id.street2"/></b><br/>
            </t>
            <b><span  t-esc="o.company_id.city"/></b>
            <t t-if="o.company_id.state_id.name">
                <b><span  t-esc="o.company_id.state_id.name"/></b>,
            </t>
            <t t-if="o.company_id.country_id.name">
                <b><span t-esc="o.company_id.country_id.name"/></b><br/>
            </t>
            <t t-if="o.company_id.phone">
                <b><span t-esc="o.company_id.phone"/></b><br/>
            </t>
            <t t-if="o.company_id.email">
                <b><span t-esc="o.company_id.email"/></b><br/>
            </t>
            <t t-if="o.company_id.vat"><b>VAT:</b>
                <b><span t-esc="o.company_id.vat"/></b><br/>
            </t>
            <t t-if="o.company_id.brn"><b>BRN:</b>
                <b><span t-esc="o.company_id.brn"/></b><br/>
            </t>
            </div>
            <div class="col-1">
            </div>
            <div class="col-6">
                <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" style="max-height:200px; max-width:250px;"/>
            </div>

                </div>
                <div t-if="company.logo or company.report_header" class="row zero_min_height">
                    <div class="col-12">
                        <div style="border-bottom: 1px solid black;"/>
                    </div>
                </div>
            </div>
            <div class="footer" style= "border-top: 1px solid black;font-size:13px;height:15px;">
                <div class="row">
                    <div class="col-5"></div>
                    <div class="col-7" align="text-center">
                        Page <span class="page"/> of <span class="topage"/>
                    </div>
                </div>
            </div>
            <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
                <t t-raw="0" />
            </div>
    </template>



<template id="report_purchaseorder_inherit">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="samm_reports.report_purchaseorder_document_inherit" t-lang="o.partner_id.lang"/>
        </t>
    </t>
</template>
</odoo>
