<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_samm_sale_report" model="report.paperformat">
            <field name="name">Sale Quotation</field>
            <field name="default" eval="True" />
            <field name="format">custom</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">55</field>
            <field name="margin_bottom">32</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">50</field>
            <field name="dpi">90</field>
        </record>

        <record id="action_report_saleorder_new" model="ir.actions.report">
            <field name="name">SSL Quotation / Order</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">samm_reports.report_saleorder_document_inherit</field>
            <field name="report_file">samm_reports.report_saleorder_document_inherit</field>
            <field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)</field>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="samm_reports.paperformat_samm_sale_report" />
        </record>
        <record id="action_report_pro_forma_invoice_new" model="ir.actions.report">
            <field name="name">SSL PRO-FORMA Invoice</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">samm_reports.report_saleorder_pro_forma_inherit</field>
            <field name="report_file">samm_reports.report_saleorder_pro_forma_inherit</field>
            <field name="print_report_name">'PRO-FORMA - %s' % (object.name)</field>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="binding_type">report</field>
            <field name="groups_id" eval="[(4, ref('sale.group_proforma_sales'))]"/>
            <field name="paperformat_id" ref="samm_reports.paperformat_samm_sale_report" />
        </record>
    </data>
</odoo>
