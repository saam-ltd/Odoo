    <template id="samm_reports.stock_report_delivery_aggregated_move_lines_inherit">
        <tr t-foreach="aggregated_lines" t-as="line">
            <td>
                <p t-if="aggregated_lines[line]['product']['product_tmpl_id']['default_code']">
                    <span t-esc="aggregated_lines[line]['product']['product_tmpl_id']['default_code']"/>
                </p>
            </td>
            <td>
                <!-- <span t-esc="aggregated_lines[line]['name']"/> -->
                <span t-esc="aggregated_lines[line]['product']['name']"/>
                <p t-if="aggregated_lines[line]['description']">
                    <span t-esc="aggregated_lines[line]['description']"/>
                </p>
            </td>
            <td class="text-center" name="move_line_aggregated_qty_ordered">
                <!-- <span t-esc="int(aggregated_lines[line]['qty_ordered'])"/> -->
                <span t-esc="'%.2f' % aggregated_lines[line]['qty_ordered']"/>
                <span t-esc="aggregated_lines[line]['product_uom']"/>
            </td>
            <td class="text-center" name="move_line_aggregated_qty_done">
                <t t-if="aggregated_lines[line]['qty_done']">
                    <!-- <span t-esc="int(aggregated_lines[line]['qty_done']) " /> -->
                    <span t-esc="'%.2f' % aggregated_lines[line]['qty_done']"/>
                    <span t-esc="aggregated_lines[line]['product_uom']"/>
                </t>
            </td>
        </tr>
    </template>

