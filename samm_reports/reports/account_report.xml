<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Invoice - Paper format -->
        <record id="paperformat_samm_report_invoice" model="report.paperformat">
            <field name="name">Invoice</field>
            <field name="default" eval="True" />
            <field name="format">custom</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">55</field>
            <field name="margin_bottom">32</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">50</field>
            <field name="dpi">90</field>
        </record>

        <record id="account_invoices_new" model="ir.actions.report">
            <field name="name">SSL Invoices</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">samm_reports.report_invoice_with_payments_inherit</field>
            <field name="report_file">samm_reports.report_invoice_with_payments_inherit</field>
            <!-- <field name="print_report_name">(object._get_report_base_filename())</field> -->
            <field name="print_report_name">(object._get_move_display_name_ssl())</field>
            <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
            <field name="groups_id" eval="[(4, ref('account.group_account_invoice')),(4, ref('account.group_account_readonly'))]"/>
            <field name="paperformat_id" ref="samm_reports.paperformat_samm_report_invoice" />
        </record>

        <record id="account_invoices_without_payment_new" model="ir.actions.report">
            <field name="name">SSL Invoices without Payment</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">samm_reports.report_invoice_inherit</field>
            <field name="report_file">samm_reports.report_invoice_inherit</field>
            <!-- <field name="print_report_name">(object._get_report_base_filename())</field> -->
            <field name="print_report_name">(object._get_move_display_name_ssl())</field>
            <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="samm_reports.paperformat_samm_report_invoice" />
        </record>
    </data>
</odoo>


